# Environment Variables for LeadPilot

# Email Configuration
# Set to 'true' to use real Resend API, 'false' or omit for mock emails
USE_REAL_EMAIL=false

# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxx

# Sender email (must be verified in Resend, or use onboarding@resend.dev for testing)
EMAIL_FROM=onboarding@resend.dev
EMAIL_FROM_NAME=LeadPilot

# Server
PORT=3000

# Database
DATABASE_PATH=./data/cadence.db

# Processor
PROCESSOR_BATCH_SIZE=10
PROCESSOR_INTERVAL_MS=30000

# AI Configuration
# Set to 'true' to use real OpenAI API, 'false' or omit for mock AI
USE_REAL_AI=false

# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxx

# Model to use (gpt-4o-mini is fast and cheap, gpt-4o for higher quality)
AI_MODEL=gpt-4o-mini
